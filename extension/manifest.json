{

	"description": "A cors-anywhere *fake* server that monkey patches fetches to https://cors-anywhere.herokuapp.com/ and runs them internally.",
	"manifest_version": 3,
	"name": "security-theater",
	"version": "1.0",
	"homepage_url": "https://github.com/xriss/security-theater",

	"browser_specific_settings": {
		"gecko": {
			"id": "security-theater@xixs.com",
			"strict_min_version": "42.0"
		}
	},

	"permissions": [
		"nativeMessaging",
		"storage"
	],

	"host_permissions": [
		"*://*/*"
	],

	"options_page": "options.html",

	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},

	"background": {
		"service_worker": "worker.js",
		"scripts": ["worker.js"]
	},

	"content_scripts": [
		{
			"world": "MAIN",
			"run_at":"document_start","all_frames":true,
			"matches": ["*://*/*"],
			"js": ["inject.js"]
		}
		,
		{
			"run_at":"document_start","all_frames":true,
			"matches": ["*://*/*"],
			"js": ["content.js"]
		}
	]
 }

